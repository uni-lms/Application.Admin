{
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "app/version.txt",
        "type": "text/plain"
      },
      "out": {
        "file": "app/version.txt",
        "type": "text/plain"
      }
    },
    "@release-it/conventional-changelog": {
      "header": "# Список изменений",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "Добавлено"
          },
          {
            "type": "add",
            "section": "Добавлено"
          },
          {
            "type": "fix",
            "section": "Исправлено"
          }
        ]
      }
    }
  }
}
